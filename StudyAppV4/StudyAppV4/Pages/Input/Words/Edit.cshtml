@page "{id:int}"
@model StudyAppV4.Pages.Input.Words.EditModel

@{ ViewData["Title"] = "Edit"; }

<h1>Edit</h1>

<h4>Term</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Term.ID" />
            <div class="form-group">
                <label asp-for="Term.Subject" class="control-label"></label>
                <input asp-for="Term.Subject" class="form-control" />
                <span asp-validation-for="Term.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Terms" class="control-label"></label>
                <input asp-for="Term.Terms" class="form-control" />
                <span asp-validation-for="Term.Terms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Definitions" class="control-label"></label>
                <input asp-for="Term.Definitions" class="form-control" />
                <span asp-validation-for="Term.Definitions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Questions" class="control-label"></label>
                <input asp-for="Term.Questions" class="form-control" />
                <span asp-validation-for="Term.Questions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Term.Answers" class="control-label"></label>
                <input asp-for="Term.Answers" class="form-control" />
                <span asp-validation-for="Term.Answers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
